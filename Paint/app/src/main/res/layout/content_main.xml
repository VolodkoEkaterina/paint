<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/draw_btn"
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:contentDescription="Brush"
            android:scaleType="fitCenter"
            android:src="@drawable/brush" />

        <ImageButton
            android:id="@+id/new_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="New"
            android:scaleType="centerCrop"
            android:src="@drawable/new_pic" />

        <ImageButton
            android:id="@+id/erase_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Erase"
            android:scaleType="centerCrop"
            android:src="@drawable/eraser" />

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Save"
            android:scaleType="centerCrop"
            android:src="@drawable/save" />
    </LinearLayout>
    <com.example.paint.DrawingView
        android:layout_width="fill_parent"
        android:id="@+id/drawing"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paint_colors"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/red"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/red"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/red1"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/red1"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/orange"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/orange"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/yellow"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/yellow"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/green"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/green"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/blue"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/blue"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/blue1"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/blue1"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/purple"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/purple"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/pink"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/pink"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/white"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/gray"
            android:contentDescription="Paint"
            android:onClick="paintClicked"
            android:src="@drawable/paint"
            android:tag="@color/gray"/>

    </LinearLayout>

</LinearLayout>